<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        title="Select Service Number"
        contentWidth="30rem"
        draggable="true"
        resizable="true">
     <VBox>
         <SearchField
                placeholder="Search Service Number or Description"
                liveChange="onServiceSearch"
                width="100%" />

        <List
            id="serviceList"
            mode="SingleSelectMaster"
            items="{serviceVH>/}">

            <StandardListItem
                title="{serviceVH>PoServiceNumber}"
                description="{serviceVH>POServiceDesc}" />
        </List>
        </VBox>

        <beginButton>
            <Button
                text="OK"
                press="onServiceConfirm" />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onServiceCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>